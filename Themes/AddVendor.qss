QPushButton#add {
    background-color: #07971B; /* green */
    color: white;
    padding: 8px 16px;
    border: none;
    border-radius: 4px;
}

QPushButton#add:hover {
    background-color: #065912; /* Darker blue on hover */
}

QPushButton#cancel {
    background-color: #E11317; /* red */
    color: white;
    padding: 8px 16px;
    border: none;
    border-radius: 4px;
}

QPushButton#cancel:hover {
    background-color: #840D0F; /* Darker blue on hover */
}